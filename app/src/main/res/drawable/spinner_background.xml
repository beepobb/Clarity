<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#E0E0E0"/> <!-- Background color when pressed -->
            <corners android:radius="4dp"/> <!-- Rounded corners -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="#FFFFFF"/> <!-- Default background color -->
            <corners android:radius="4dp"/> <!-- Rounded corners -->
            <stroke android:width="1dp" android:color="#6338CD"/> <!-- Border color and width -->
        </shape>
    </item>
</selector>