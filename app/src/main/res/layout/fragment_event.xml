        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="night_fiesta_description"
                android:src="@drawable/night_fiesta"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/background_white"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:src="@drawable/rectangle_3"
                android:layout_marginTop="200dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/nightfiesta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Night Fiesta"
                app:layout_constraintStart_toStartOf="@id/background_white"
                android:paddingStart="30dp"
                app:layout_constraintTop_toTopOf="@id/background_white"
                android:paddingTop="20dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/datentime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24 February 2024 | 1800 - 2130 "
                app:layout_constraintStart_toStartOf="@+id/nightfiesta"
                android:paddingStart="30dp"
                app:layout_constraintTop_toBottomOf="@+id/nightfiesta"
                android:textSize="10sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/datentime"
                android:paddingStart="30dp"
                app:layout_constraintTop_toBottomOf="@+id/datentime"



        </androidx.constraintlayout.widget.ConstraintLayout>


<!--    </ScrollView>-->
</androidx.constraintlayout.widget.ConstraintLayout>
