<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="AppTheme">
        <!-- Define a theme attribute -->
        <attr name="profile_circle" format="color"/>
        <attr name="profile_container" format="color"/>
    </declare-styleable>
    <!-- Base application theme. -->
    <style name="Base.Theme.Clarity" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="profile_circle">@color/purple</item>
        <item name="profile_container">@color/bg_dark</item>
        <item name="android:statusBarColor">#2B2254</item>
    </style>

    <style name="Theme.Clarity" parent="Base.Theme.Clarity" />

    <style name="RoundFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="cornerFamily">rounded</item>
        <item name="android:radius">40dp</item>
        <item name="backgroundTint">#2B2254</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="ScreenBackground"><item name="android:background">@color/dark_grey</item></style>
    <style name="Container"><item name="android:background">@color/dark_grey</item></style>
    <style name="Accent1"><item name="android:textColor">@color/purple</item></style>
    <style name="Subtitle"><item name="android:textColor">@color/grey</item></style>
    <style name="Typography"><item name="android:textColor">@color/light_grey</item></style>

    <!-- Styles for Login/Create account -->
    <style name="LogInFields"><item name="android:background">@drawable/grey_rectangle_night</item> </style>
    <style name="Submit"><item name="android:background">@drawable/purple_rectangle_night</item></style>
    <style name="CreateAccountHeading"><item name="android:textColor">@color/purple</item></style>
    <style name="InputField"><item name="android:background">@drawable/field_night</item></style>

    <!-- Styles for Event Fragment -->
    <style name="EventTitle"><item name="android:textColor">@color/white</item></style>
    <style name="EventDetails"><item name="android:textColor">@color/light_grey</item></style>
    <style name="EventCard"><item name="android:background">@color/purplish_grey</item></style>

    <!-- Styles for Calendar Fragment -->
    <style name="CalendarEventCard"><item name="cardBackgroundColor">@color/purplish_grey</item></style>
    <style name="CalendarBanner"><item name="android:background">#1F2020</item></style>
    <style name="CalendarEventDateContainer"><item name="android:background">@color/purple</item></style>
    <style name="CalendarEventMainText"><item name="android:textColor">@color/white</item></style>
    <style name="CalendarEventSubText"><item name="android:textColor">@color/light_grey</item></style>

    <!-- Styles for Profile Fragment -->
    <style name="ProfileBanner"><item name="android:background">@color/dark_purple</item></style>
    <style name="ProfileButton">
        <item name="backgroundTint">@color/wolf_grey</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>
</resources>